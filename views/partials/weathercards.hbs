
<div class="ui five inverted cards">
    <div class="red card">
        <div class="image">
            <img>
        </div>
        <div class="extra">
         <h3>  {{station.name}} </h3>
            <div class="ui yellow rating" data-rating="1"></div>
        </div>
    </div>
    <div class="orange card">
        <div class="image">
            <img>
        </div>
        <div class="extra">
            <h3>Weather</h3>
            <p>{{lastestReadings.weatherCondition}} </p>
          <div class="ui yellow rating" data-rating="2"></div>
      </div>
  </div>
  <div class="yellow card">
      <div class="image">
          <img>
      </div>
      <div class="extra">
          <h3>Temp</h3>
       
        <p>{{station.lastReading.temperature}} C</p>
          <p>{{station.fahrenheit}} F</p>
          <div class="ui yellow rating" data-rating="3"></div>
      </div>
  </div>
  <div class="green card">
      <div class="image">
          <img>
      </div>
      <div class="extra">
          <h3>Wind</h3>
          <p>{{station.beaufort}} bft
        <br> {{station.windCompass}}
        <br> {{station.windChill}}
        </p>
          <div class="ui yellow rating" data-rating="4"></div>
      </div>
  </div>
  <div class="blue card">
      <div class="image">
          <img>
      </div>
      <div class="extra">
          <h3>Pressure</h3>
          <p>{{station.lastReading.pressure}} hpa</p>
          <div class="ui yellow rating" data-rating="5"></div>
      </div>
  </div>
