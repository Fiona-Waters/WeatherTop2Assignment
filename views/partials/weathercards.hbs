
<div class="ui five inverted cards">
  {{each station.readings}}
    <div class="red card">
        <div class="image">
            <img>
        </div>
        <div class="extra">
         <h3>  {{name}} </h3>
            <div class="ui yellow rating" data-rating="1"></div>
        </div>
    </div>
    <div class="orange card">
        <div class="image">
            <img>
        </div>
        <div class="extra">
            <h3>Weather</h3>
            <p>*** </p>
          <div class="ui yellow rating" data-rating="2"></div>
      </div>
  </div>
  <div class="yellow card">
      <div class="image">
          <img>
      </div>
      <div class="extra">
          <h3>Temp</h3>
       
        <p>{{reading.temperature}} C</p>
          <p>*** F</p>
          <div class="ui yellow rating" data-rating="3"></div>
      </div>
  </div>
  <div class="green card">
      <div class="image">
          <img>
      </div>
      <div class="extra">
          <h3>Wind</h3>
          <p>*** bft</p>
          <div class="ui yellow rating" data-rating="4"></div>
      </div>
  </div>
  <div class="blue card">
      <div class="image">
          <img>
      </div>
      <div class="extra">
          <h3>Pressure</h3>
          <p>*** hpa</p>
          <div class="ui yellow rating" data-rating="5"></div>
      </div>
    {{/each}}
  </div>